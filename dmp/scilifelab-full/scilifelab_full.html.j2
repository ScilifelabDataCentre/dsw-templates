<!DOCTYPE HTML>
{# ------------------------------------------------------------------------------------ #}
{#  VARIABLES                                                                           #}
{# ------------------------------------------------------------------------------------ #}
{% set km = dmp.knowledgeModel %}
{% set replies = dmp.questionnaireReplies %}
{% set report = dmp.report %}
{% set metricDefinitions = dmp.metrics %}
{% set levelDefinitions = dmp.levels %}

{# ------------------------------------------------------------------------------------ #}
{#  LAYOUT                                                                              #}
{# ------------------------------------------------------------------------------------ #}

{% macro renderHeader() -%}
  <header>
    <h1>
      <div class="headline">
        <span class="km-name">{{km.name}}</span>
      </div>

      <img src="https://swefreq-dev.nbis.se/static/img/SLL_logo.png?v=20190523130455.697232"/>
    </h1>
    <dl>
      {# <dt>Organization</dt>
      <dd>{{dmp.organization.name}}</dd> #}
      {% if dmp.createdBy %}
        <dt>Created by</dt>
        <dd>{{dmp.createdBy.name}} {{dmp.createdBy.surname}} (<a href="mailto:{{dmp.user.email}}">{{dmp.createdBy.email}}</a>)</dd>
      {% endif %}
      <dt>Based on</dt>
      <dd>{{dmp.package.name}}, {{dmp.package.version}}</dd>
      {% if dmp.config.levelsEnabled %}
      {# <dt>Project Phase</dt>
      <dd>{{renderCurrentLevel()}}</dd> #}
      {% endif %}
      <dt>Created at</dt>
      <dd>{{dateformat(replace(dmp.createdAt, slice(dmp.createdAt,19), "Z"), "%d.%m.%Y")}}</dd>
    </dl>
  </header>
{%- endmacro -%}

{% macro renderContent() -%}
  {{renderChapters()}}
{%- endmacro -%}

{% macro renderFooter() -%}
  <footer>
    Data Managament Plan generated by Data Stewardship Wizard <<a href="https://ds-wizard.org" target="_blank">https://ds-wizard.org</a>>
  </footer>
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  HEADER                                                                              #}
{# ------------------------------------------------------------------------------------ #}

{% macro renderCurrentLevel() -%}
  {% for levelDefinition in levelDefinitions %}
    {% if levelDefinition.level == dmp.level %}
      {{levelDefinition.title}}
    {% endif %}
  {% endfor %}
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  REPORT                                                                              #}
{# ------------------------------------------------------------------------------------ #}
{% macro renderReport(chapterUuid) -%}
  <section class="report">
    <h3 class="title">Report</h3>
    {# {{renderIndications(chapterUuid)}} #}
    {# {{renderMetrics(chapterUuid)}} #}
  </section>
{%- endmacro -%}

{% macro renderIndications(chapterUuid) -%}
  <h4>Indications</h4>
  <div class="indications">
    <table>
      <tbody>
        {% for chapterReport in report.chapterReports %}
          {% if chapterReport.chapterUuid == chapterUuid %}
            {% for indication in chapterReport.indications %}
              {{renderIndication(indication)}}
            {% endfor %}
          {% endif %}
        {% else %}
          No indications
        {% endfor %}
      </tbody>
    </table>
  </div>
{%- endmacro -%}

{% macro renderIndication(indication) -%}
  <tr>
    <td>Answered {% if indication.indicationType == "LevelsAnsweredIndication" %}(current phase){% endif %}</td>
    <td>{{indication.answeredQuestions}} / {{indication.answeredQuestions + indication.unansweredQuestions}} </td>
  </tr>
{%- endmacro -%}

{% macro renderMetrics(metrics) -%}
  {% script %}
  macro containsMetrics(report, chapterUuid) {
    for (chapterReport in report.chapterReports) {
      if (chapterReport.chapterUuid == chapterUuid) {
        for (metric in chapterReport.metrics) {
          echo(true);
        }
      }
    }
  }
  {% endscript %}
  <h4>Metrics</h4>
  <div class="metrics">
    {% if containsMetrics(report, chapter.uuid) %}
    <table>
        <thead>
            <tr>
                <th>Metric</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
          {% for chapterReport in report.chapterReports %}
            {% if chapterReport.chapterUuid == chapter.uuid %}
              {% for metric in chapterReport.metrics %}
                {{renderMetric(metric)}}
              {% endfor %}
            {% endif %}
          {% else %}
            No indications
          {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p class="text-light">No metrics for this chapter.</p>
    {% endif %}
  </div>
{%- endmacro -%}

{% macro renderMetric(metric) -%}
  <tr>
    <td>
      {% for metricDefinition in metricDefinitions %}
        {% if metric.metricUuid == metricDefinition.uuid %}
          {{metricDefinition.title}}
        {% endif %}
      {% endfor %}
    </td>
    <td>{{metric.measure}}</td>
  </tr>
{%- endmacro -%}

{# ------------------------------------------------------------------------------------ #}
{#  KNOWLEDGE MODEL                                                                     #}
{# ------------------------------------------------------------------------------------ #}
{% macro renderChapters() -%}
  {% set humanIdentifier = 1 %}
  {% for chapterUuid in km.chapterUuids %}
    {% if km.entities.chapters[chapterUuid].title != "Support from Data Centre" %}
      {{renderChapter(humanIdentifier, km.entities.chapters[chapterUuid])}}
      {% set humanIdentifier = humanIdentifier + 1 %}
      {# TODO: humanIdentifier for chapter in roman numerals #}
    {% endif %}
  {% else %}
    No chapters
  {% endfor %}
{%- endmacro -%}

{% macro renderChapter(humanIdentifier, chapter) -%}
  <section class="chapter" id="{{chapter.uuid}}" data-uuid="{{chapter.uuid}}" data-type="chapter">
    <h2 class="title">{{humanIdentifier|roman}}. {{chapter.title}}</h2>
    <p class="text-light">{{chapter.text|markdown}}</p>
    {# {{renderReport(chapter.uuid)}} #}
    {{renderQuestions(chapter.questionUuids, chapter.uuid)}}
  </section>
{%- endmacro -%}

{# --------------------------------------------------- #}
{# --------------------------------------------------- #}

{% macro renderQuestions(questionUuids, chapterUuid) -%}
  <section class="questions">
    <h3 class="title">Questions</h2>
    {% set humanIdentifier = 1 %}
    {% for questionUuid in questionUuids %}
      {{renderQuestion(km.entities.questions[questionUuid], humanIdentifier, chapterUuid)}}
      {% set humanIdentifier = humanIdentifier + 1 %}
    {% else %}
      No questions
    {% endfor %}
  </section>
{%- endmacro -%}

{% macro renderQuestion(question, humanIdentifier, path) -%}
  {% macro questionClasses(question) -%}
      "question {{ (question.requiredLevel != null && question.requiredLevel <= dmp.level) ? "required" : "optional"}} {{ question.requiredLevel != null ? concat("phase-", question.requiredLevel) : "phase-none"}}"
  {%- endmacro -%}
  {% set path = path ~ "." ~ question.uuid %}
  {% if question.answerValue or
        question.answerOption or
        question.items or
        (question.title != "Data contact" and
         question.title != "Responsible for Data Management Plan") %}

    <div class={{questionClasses(question)}} id="{{path}}" data-uuid="{{question.uuid}}" data-type="question">
      <h4 class="title">
        <strong class="human-identifier">{{humanIdentifier}}</strong>
        {{question.title}}
      </h4>
      <p class="text text-light">{{question.text|markdown}}</p>
      <div class="extra-data">
        {{renderTags(question.tagUuids)}}
        {{renderReferences(question.referenceUuids)}}
        {{renderExperts(question.ExpertUuids)}}
      </div>
      {{renderAnswer(question, humanIdentifier, path)}}
    </div>
  {% endif %}
{%- endmacro -%}

{# --------------------------------------------------- #}
{# --------------------------------------------------- #}

