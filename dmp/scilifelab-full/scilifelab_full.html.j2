{% macro renderAnswer(question, humanIdentifier, path) -%}
  {% script %}
  macro hasReply(questionUuid) {
    for (reply in replies) {
      if (endswith(reply.path, path)) {
        echo(true);
      }
    }
  }
  {% endscript %}

  {% if hasReply(question.uuid) %}
    {% for reply in replies %}
      {% if endswith(reply.path, path) %}
        {% if question.questionType == "ValueQuestion" && reply.value.type == "StringReply" %}
          {{renderAnswerValue(question, reply, humanIdentifier, path)}}
        {% elif question.questionType == "OptionsQuestion" && reply.value.type == "AnswerReply" %}
          {{renderAnswerOption(question, reply, humanIdentifier, path)}}
        {% elif question.questionType == "ListQuestion" && reply.value.type == "ItemListReply" %}
          {{renderAnswerItems(question, reply, humanIdentifier, path)}}
        {% elif question.questionType == "IntegrationQuestion" && reply.value.type == "IntegrationReply" %}
          {{renderAnswerValue(question, reply, humanIdentifier, path)}}
        {% endif %}
      {% endif %}
    {% endfor %}
  {% else %}
    {{renderNotAnswered()}}
  {% endif %}
{%- endmacro -%}

{% macro renderAnswerValue(question, reply, humanIdentifier, path) -%}
  <div class="answer-block answer-simple" id="{{path}}" data-path="{{reply.path}}" data-type="answer">
    <p class="answer">
      {# <svg aria-hidden="true" data-prefix="fas" data-icon="check" class="svg-inline--fa fa-check fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z"></path></svg> #}
      {% if reply.value.type == "StringReply" %}
        <span>{{reply.value.value}}</span>
      {% else %}
        <span>{{reply.value.value.value}}</span>
        {% if reply.value.value.type == "IntegrationValue" && reply.value.value.id %}
          {{ renderIntegrationLink(question.integrationUuid, reply.value.value.id) }}
        {% endif %}
      {% endif %}
    </p>
  </div>
{%- endmacro -%}

{% macro renderIntegrationLink(integrationUuid, answerIntId) -%}
  {% set integration = km.entities.integrations[integrationUuid] %}
  <div class="integration-link">
    <img src="{{ integration.logo }}" alt="{{ integration.name }}">
    <a href="{{ integration.itemUrl|replace("${id}", answerIntId) }}">
      {{ integration.itemUrl|replace("${id}", answerIntId) }}
    </a>
  </div>
{%- endmacro -%}

{% macro renderAnswerOption(question, reply, humanIdentifier, path) -%}
  {% set hi = indexOf(question.answerUuids, reply.value.value) + 1 %}
  {% set answer = km.entities.answers[reply.value.value] %}
  {% set path = path ~ "." ~ answer.uuid %}
  {% set humanIdentifier = humanIdentifier ~ "." ~ hi|ofAlphabet %}
  <div class="answer-block answer-option" id="{{path}}" data-path="{{reply.path}}" data-uuid="{{answer.uuid}}" data-type="answer">
    <p class="answer">
      {# <svg aria-hidden="true" data-prefix="fas" data-icon="check" class="svg-inline--fa fa-check fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M173.898 439.404l-166.4-166.4c-9.997-9.997-9.997-26.206 0-36.204l36.203-36.204c9.997-9.998 26.207-9.998 36.204 0L192 312.69 432.095 72.596c9.997-9.997 26.207-9.997 36.204 0l36.203 36.204c9.997 9.997 9.997 26.206 0 36.204l-294.4 294.401c-9.998 9.997-26.207 9.997-36.204-.001z"></path></svg> #}
      <span>{{ hi|ofAlphabet }}. {{answer.label}}</span>
    </p>
    {% if answer.advice %}
      <p class="text-muted"><i>{{answer.advice|markdown}}</i></p>
    {% endif %}
    <div class="followups">
      {% set x = 1 %}
      {% for questionUuid in answer.followUpUuids %}
        {% set followUp = km.entities.questions[questionUuid] %}
        {{renderQuestion(followUp, humanIdentifier ~ "." ~ x, path)}}
        {% set x = x + 1 %}
      {% endfor %}
    </div>
  </div>
{%- endmacro -%}

{% macro renderAnswerItems(question, reply, humanIdentifier, path) -%}
  <div class="answer-block answer-items" id="{{path}}" data-path="{{reply.path}}" data-type="answer">
    <h4>Answers</h4>
    {% for i in range(1, reply.value.value) %}
      {% set itemPath = path ~ "." ~ (i - 1) %}
      {% set itemHumanIdenfifier = humanIdentifier ~ "." ~ i|ofAlphabet %}
      <div class="answer-item" id="{{reply.path}}-{{reply.value.value}}">
        <div class="followups">
          {% set x = 1 %}
          {% for questionUuid in question.itemTemplateQuestionUuids %}
            {% set followup = km.entities.questions[questionUuid] %}
            {{ renderQuestion(followup, itemHumanIdenfifier ~ "." ~ x, itemPath) }}
            {% set x = x + 1 %}
          {% else %}
            No follow up questions
          {% endfor %}
        </div>
      </div>
    {% else %}
      No answer items
    {% endfor %}
  </div>
{%- endmacro -%}

{% macro renderNotAnswered() -%}
  <div class="answer-block not-answered">
    <p class="no-answer">
      <svg aria-hidden="true" data-prefix="fas" data-icon="times" class="svg-inline--fa fa-times fa-w-11" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 352 512"><path fill="currentColor" d="M242.72 256l100.07-100.07c12.28-12.28 12.28-32.19 0-44.48l-22.24-22.24c-12.28-12.28-32.19-12.28-44.48 0L176 189.28 75.93 89.21c-12.28-12.28-32.19-12.28-44.48 0L9.21 111.45c-12.28 12.28-12.28 32.19 0 44.48L109.28 256 9.21 356.07c-12.28 12.28-12.28 32.19 0 44.48l22.24 22.24c12.28 12.28 32.2 12.28 44.48 0L176 322.72l100.07 100.07c12.28 12.28 32.2 12.28 44.48 0l22.24-22.24c12.28-12.28 12.28-32.19 0-44.48L242.72 256z"></path></svg>
      <span>This question has not been answered yet!</span>
    </p>
  </div>
{%- endmacro -%}

